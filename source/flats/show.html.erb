<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<div class="header">
  <% flat = data.flats[owner] %>
</div>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>
<!-- Inject flat data in template -->
<div class="white-background">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="header-img">
        <div class="image-name">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width:"80px" %>
          <p><%= flat.name %></p>
        </div>
        <div class="flat-description">
          <h3><%= flat.description %></h3>
          <p><%= flat.city_name %></p>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="booking">
        <div class="row">
          <div class="col-xs-12">
            <form action="#">
              <h4>Book this flat</h4>
              <div class="form-group">
                <div class="row">
                  <div class="col-xs-6">
                    <input type="text" class="form-control" placeholder="checkin" id="checkin">
                  </div>
                  <div class="col-xs-6">
                    <input type="text" class="form-control" placeholder="checkout">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <select name="" id="guests" class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
              <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
</div>
